<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
android:id="@+id/card_linear_layout"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
    >
<LinearLayout
    android:id="@+id/debator_section"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginStart="@dimen/activity_horizontal_margin"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    android:orientation="horizontal"
    >
    <ImageView
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="1"

        android:src="@drawable/kaseb_pic"
        />
    <TextView
        android:id="@+id/item_list_customer_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
        android:text="@string/kaseb_name"
        android:layout_marginLeft="@dimen/item_horizontal_margin"
        android:layout_marginStart="@dimen/item_horizontal_margin"
        android:fontFamily="sans-serif-condensed"
        android:textColor="#000000"
        android:maxLength="14"
        android:textAppearance="?android:textAppearanceMedium"
        />
    <TextView
        android:id="@+id/item_list_purchase_amount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:layout_marginLeft="@dimen/item_horizontal_margin"
        android:layout_marginStart="@dimen/item_horizontal_margin"
        android:layout_weight="3"
        android:text="@string/sample_text_purchase_of_customer_amount"
        android:fontFamily="sans-serif-condensed"
        android:textAppearance="?android:textAppearanceLarge"
        />

</LinearLayout>
<TableLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/activity_vertical_Large_margin"
    android:layout_marginRight="8dp"
    android:layout_marginEnd="8dp"
    android:divider="@drawable/divider_list"
    android:showDividers="middle"
    >
    <TableRow
        android:padding="3dp"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent">
        <TextView
            android:id="@+id/column_title_invoice_code"
            android:text="@string/column_title_Bill_code"
            style="@style/debator_table_cell_text"
            android:layout_weight="1"
            ></TextView>
        <TextView
            android:id="@+id/column_title_settlement"
            android:text="@string/column_title_day_of_maturity"
            style="@style/debator_table_cell_text"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/column_title_account_ballance"
            android:text="@string/column_title_account_balance"
            style="@style/debator_table_cell_text"
            android:layout_weight="2"/>
    </TableRow>
    <TableRow
        android:padding="3dp"
        android:layout_marginTop="4dp"
        >
        <TextView
            android:id="@+id/code_1_invoice"
            style="@style/debator_table_cell_text"
            android:layout_weight="1"
            android:text="@string/sample_invoice_code"/>

        <TextView
            android:id="@+id/due_date_1_day"
            style="@style/debator_table_cell_text"
            android:layout_weight="1"
            android:text="@string/sample_due_date_1_day"/>

        <TextView
            android:id="@+id/balance_1_ammount"
            style="@style/debator_table_cell_text"
            android:layout_weight="2"
            android:text="@string/sample_invoice_ballance"/>
    </TableRow>
    <TableRow
        android:padding="3dp"
        android:layout_marginTop="4dp"
        >
        <TextView
            android:id="@+id/code_2_invoice"
            style="@style/debator_table_cell_text"
            android:layout_weight="1"
            android:text="@string/sample_2_invoice_code"/>

        <TextView
            android:id="@+id/due_date_2_day"
            style="@style/debator_table_cell_text"
            android:layout_weight="1"
            android:text="@string/sample_due_date_2_day"/>

        <TextView
            android:id="@+id/balance_2_ammount"
            style="@style/debator_table_cell_text"
            android:layout_weight="2"
            android:text="@string/sample_invoice_2_ballance"/>
    </TableRow>

</TableLayout>

<View
    android:layout_width="fill_parent"
    android:layout_height="2px"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    android:background="@drawable/divider_list"></View>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp"
    android:layout_marginBottom="4dp"
    android:layout_marginTop="4dp"
    android:orientation="horizontal"
    android:divider="@drawable/divider_list"
    android:showDividers="middle">
    <ImageView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="32dp"
        android:src="@drawable/ic_phone"
        />
    <ImageView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="32dp"
        android:src="@drawable/message"
        />
    <ImageView
        android:layout_width="0dp"
        android:layout_height="32dp"
        android:layout_weight="1"
        android:src="@drawable/share_variant"/>
</LinearLayout>

</LinearLayout>